<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Registrar cuenta</h2>
            </div>
            <div class="card-body">
                <form action="/users/registrarse" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{ nombre }}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="correo" placeholder="Correo" value="{{ correo }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="password" value="{{ password }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password2" placeholder="Confirmar password" value="{{ password2 }}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>